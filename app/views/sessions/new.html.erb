<div class="container flex">
      <%= form_with(url: login_path, scope: :session, local: true, class: 'form session-form') do |f| %>
        <div class="form-field">
          <%= f.email_field :email, placeholder: "example@me.com", required: true, class: 'form-control' %>
        </div>
        <div class="form-field">
        </div>
        <div class="form-field">
          <%= f.password_field :password, placeholder: "******", required: true, class: 'form-control' %>
        </div>
        <div class="form-field">
          <%= f.submit "Login", class: "btn btn-primary" %>
        </div>
        <p class="navigation-link">New user? <%= link_to "Sign up now!", signup_path %></p>
      <% end %>
</div>
