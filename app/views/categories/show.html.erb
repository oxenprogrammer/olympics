<div class="main-category grid">
  <div class="first-category sub-category grid">
    <%= image_tag @first.image, class: "category-article_image" %>
    <div class="text-category">
      <div class="text-category_title">
        <%= @category.name.titleize %>
      </div>
      <div class="text-category_article_title">
        <%= @first.title.titleize %>
      </div>
      <p class="text-category_article_text">
        <%= @first.text.truncate_words(15, omission: '...') %>
      </p>
      <div class="author">
        By: <%= @user.find(@first.author_id).name.titleize %>
        <span class="vote-btn">
          <% if logged_in? %>
          <%= link_to 'Vote', article_votes_path(@first[:id]), params: { vote: { user_id: current_user.id, article_id: @first.id } }, disabled: voted?(current_user, @first), method: :post %>
          <% end %>
          <span class="vote-count">
            <%= vote_count(@first) %>
          </span>
        </span>
      </div>
    </div>
  </div>
