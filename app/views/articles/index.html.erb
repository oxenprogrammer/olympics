<div class="container flex">
<div class="featured-article grid">
  <%= image_tag @featured.image, class: "featured-mage" %>
  <div class="featured-text">
  <h1>
    <%= link_to @featured.title, @featured, class: 'featured-text_title'%>
  </h1>
  <div class='featured-text_caption'><%= @featured.text[0..100] %></div>
  </div>
</div>
