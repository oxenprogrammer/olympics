<p id="notice"><%= notice %></p>
  <div class='container'>
    <div class="container-article grid">
      <%= image_tag @article.image, alt: 'Article image', class: 'article-image' %>
      <div class="article-single">
        <div class="author-single">
          <span>Author: </span> <%= author_name(@article) %>
        </div
        <div class="article-single-text">
          <%= @article.text %>
          <%= form_with url: article_comments_path(@article.id), method: :post, class: "form user-form" do |f| %>
            <div class="form-field">
              <%= f.text_area :text, placeholder: 'Comment body...', required: true, minlength: 10, maxlength: 100 %>
            </div>
            <%= f.hidden_field :article_id, value: @article.id %>
            <div class="form-field">
              <%= f.submit "Comment", class: "btn btn-primary" %>
            </div>
          <% end %>
          <% @article.comments.each do |comment| %>
            <p>Comment: <%= comment.text %><p>
            <span>Author: </span> <%= author_comment(comment) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
